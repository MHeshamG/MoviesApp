<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MovieDetailsActivity"
    android:padding="8dp">

    <include layout="@layout/toolbar"></include>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fresco="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="150dp"
        android:layout_height="250dp"
        card_view:cardCornerRadius="6dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/toolbar"
        >

        <!--   android:background="@drawable/one_side_border"-->

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/movie_poster_view_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:placeholderImage="@drawable/placeholder.png"
            android:scaleType="fitXY"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/movie_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="Title"
        android:layout_toRightOf="@id/card_view"
        android:fontFamily="sans-serif-light"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/movie_details_descrption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_below="@id/card_view"
        android:fontFamily="sans-serif-light" />

</RelativeLayout>